//Script to add and subtract currency

using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class CurrencyTracker : MonoBehaviour
{

    int Spread = 0; //spead item
    int Poison = 0; //poison item
    int Piercing = 0; //piercing item
    int Explosive = 0; //explosive item
    int Energy = 0; //energy item

    public static int Currency = 0; //currency/balance of currency
    public static int cost = 0;

    // Use this for initialization
    void Start()
    {

        //call to buy loot
        //Buy();

        //call to earn money
       // Add();
    }

    public static void Buy(int _Currency) //method gor subtracting total money when bying items
    {
        

        _Currency = CurrencyTracker.Currency; //see if player has enoguh money

        if (_Currency >= 0)
        {
            _Currency -= cost;
            return;
        }
       
    }


    //Add some money to the balance.
    public static void Add(int amount)
    {
        amount++;
    }
}
